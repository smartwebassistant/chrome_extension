{
  "manifest_version": 3,
  "name": "Smart Web Assistant",
  "version": "1.4",
  "description": "Smart Web Assistant is a Chrome extension that enhances your browsing with AI-powered insights from both cloud and local models.",
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel",
    "scripting",
    "contextMenus",
    "tabs"
  ],
  "action": {
    "default_popup": "ui/popup.html"
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["contextMenu.js", "ui/config-menus/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "side_panel": {
    "default_path": "ui/sidepanel.html"
  }
}
